<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="selfprojects.bmicalc.BMICalcController">
   <children>
      <Label layoutX="27.0" layoutY="29.0" style="-fx-border-color: Black;" text="BMI Calc" underline="true">
         <font>
            <Font name="Cambria" size="24.0" />
         </font>
      </Label>
      <Label layoutX="27.0" layoutY="116.0" text="Weight: ">
         <font>
            <Font name="System Italic" size="18.0" />
         </font>
      </Label>
      <Label layoutX="27.0" layoutY="172.0" text="Height: ">
         <font>
            <Font name="System Italic" size="18.0" />
         </font>
      </Label>
      <TextField fx:id="weightTextField" layoutX="100.0" layoutY="118.0" promptText="i. e 70KG" />
      <TextField fx:id="heightTextField" layoutX="100.0" layoutY="173.0" promptText="i. e 1.76 M" />
      <Text layoutX="258.0" layoutY="135.0" strokeType="OUTSIDE" strokeWidth="0.0" text="kg" />
      <Text layoutX="258.0" layoutY="190.0" strokeType="OUTSIDE" strokeWidth="0.0" text="m" />
      <Label fx:id="resultLabel" layoutX="334.0" layoutY="116.0" prefHeight="33.0" prefWidth="211.0" style="-fx-border-color: black;" text=" Your BMI: " textFill="RED">
         <font>
            <Font name="MS UI Gothic" size="18.0" />
         </font>
      </Label>
      <Text fill="#00000083" fontSmoothingType="LCD" layoutX="226.0" layoutY="382.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Made by devSharkIT Meddy" textAlignment="CENTER">
         <font>
            <Font name="Georgia" size="12.0" />
         </font>
      </Text>
      <Button layoutX="420.0" layoutY="173.0" mnemonicParsing="false" onAction="#findButtonOnClick" text="Find" />
      <Text layoutX="27.0" layoutY="252.0" strokeType="OUTSIDE" strokeWidth="0.0" text="If you don't know your height in meter you can convert it from feet below  " />
      <TextField fx:id="feetTextField" layoutX="25.0" layoutY="267.0" onKeyPressed="#enterKeyPress" promptText="Your height in feet" />
      <Label fx:id="feetResultLabel" layoutX="196.0" layoutY="268.0" prefHeight="25.0" prefWidth="150.0" style="-fx-border-color: black;" text=" Your height in Meter" textFill="RED" />
      <Button fx:id="getButton" layoutX="350.0" layoutY="268.0" mnemonicParsing="false" onAction="#getButtonClick" text="Get" />
   </children>
</AnchorPane>
